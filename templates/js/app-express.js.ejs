const express = require('express')
const app = express()
const port = 3000

<% if (kind === 'complex') { -%>
app.get("/", (req, res) => {
  res.sendFile(__dirname + "/public/index.html");
});

app.get("/sse", (req, res) => {
  res.header({
    "Content-Type": "text/event-stream",
    "Cache-Control": "no-cache",
    "Connection": "keep-alive",
  });
  res.write("data: " + (new Date()) + "\n\n");
  setInterval(() => {
    res.write("data: " + (new Date()) + "\n\n");
  }, 1000);
});
<% } -%>

